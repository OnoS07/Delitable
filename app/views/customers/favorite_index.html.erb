<div class="container" style="padding-bottom: 100px;">
	<div class="row">
		<div class="col-lg-12">
			<span class="form-title" style="margin-right: 20px;">
				<i class="fas fa-utensils"></i> Favorite Recipes
			</span>
			<span style="margin-left: 10px;font-size: 15px;">
				<%= link_to ">back", customer_path(@customer) %>
			</span>
			<div class="recipe-contents" style="margin-top: 20px;">
			<% @favorites.each do |favorite| %>
				<div class="recipe-content">
					<%= link_to recipe_path(favorite.recipe) do %>
						<%= attachment_image_tag favorite.recipe, :recipe_image, format:"jpg",
							fallback:"top_recipe.jpg", class:"recipe-image" %>
						<span style="font-size: 18px;">
							<i class="fas fa-utensils font-md-sp" style="margin-top: 5px;">
								<%= favorite.recipe.title.truncate(15) %>
							</i>
						</span>
					<% end %>
						<span class="hidden-sp hidden-tb">
							<%= link_to customer_path(favorite.recipe.customer) do %>
								<i class="fas fa-user" style="color: #F96167"></i>
									<span style="color: black">
										<%= favorite.recipe.customer.account_name %>
									</span>
							<% end %>
							<span style="margin: 0 30px;">
								<i class="fas fa-comment" style="color: #F96167"></i>
									<span style="color: black"><%= favorite.recipe.comments.count %>ä»¶</span>
							</span>
							<i class="fas fa-heart" style="color: #F96167"></i>
							<span style="color:black">
								<%= favorite.recipe.favorites.count %>
							</span>
							<i class="fas fa-paw", style="color: #F96167; margin-left:30px;"></i>
							<%= favorite.recipe.impressionist_count %>
						</span>
						<span class="hidden-sp" style="font-size:12px;margin-top: 5px">
							<%= favorite.recipe.introduction.truncate(45) %>
						</span>
				</div>
			<% end %>
			</div>
		</div>
	</div>
</div>